<% let postData = `{"postId": -1, "username": "@not found@", "date": "@not
found@", "statistics": -1, "content": "@not found@", "title": "@not found@"}`;
let postOrder = 'right'; if (locals.data){ postData = data; } if(locals.order){
postOrder = order; } %>

<div class="content-element content-<%-postOrder%>">
  <p class="hidden-from-layout"><%-postData.postId%></p>
  <div class="content-container">
    <div class="content-title-container content-title">
      <p class="medium-text"><%-postData.title%></p>
      <p class="small-text transparent-text" style="align-self: flex-start">
        <%-postData.date%>
      </p>
    </div>
    <hr class="content-line" />
    <div class="content-post-container content-post">
      <p class="small-text"><%-postData.content%></p>
    </div>
    <div class="content-additional-container content-info">
      <%if(locals.isPersonalPage){%>
      <button class="delete-post-button">
        <svg
          class="delete-bin"
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-trash3-fill"
          viewBox="0 0 16 16"
        >
          <path
            d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"
          />
        </svg>
      </button>
      <%}else{%>
      <p class="small-text transparent-text">@<%-postData.username%></p>
      <%}%>
      <div class="reaction-container">
        <svg
          class="full-heart hidden-from-layout"
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-heart-fill"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"
          />
        </svg>
        <svg
          class="empty-heart"
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-heart"
          viewBox="0 0 16 16"
        >
          <path
            d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"
          />
        </svg>
        <p class="small-text no-select"><%-postData.statistics%></p>
      </div>
    </div>
  </div>
</div>
