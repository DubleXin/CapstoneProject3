<%- include("./partials/header.ejs") %> <% let postData = `{"postId": -1,
"username": "@not found@", "date": "@not found@", "statistics": -1, "content":
"@not found@", "title": "@not found@"}`; let postOrder = 'right'; if
(locals.data){ postData = data; } if(locals.order){ postOrder = order; } %>
<div class="post-grid">
  <p class="hidden-from-layout"><%-postData.postId%></p>
  <div class="post-title">
    <p class="huge-text"><%- postData.title %></p>
    <hr />
  </div>
  <div class="post-content">
    <p class="medium-text"><%- postData.content %></p>
  </div>
  <div class="post-credits">
    <p class="large-text">@<%- postData.username %></p>
    <div class="reaction-container-post">
      <svg
        class="full-heart-post hidden-from-layout"
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-heart-fill"
        viewBox="0 0 16 16"
      >
        <path
          fill-rule="evenodd"
          d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"
        />
      </svg>
      <svg
        class="empty-heart-post"
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-heart"
        viewBox="0 0 16 16"
      >
        <path
          d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"
        />
      </svg>
      <p class="medium-text"><%- postData.statistics %></p>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
